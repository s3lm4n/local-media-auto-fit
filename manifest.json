{
  "manifest_version": 3,
  "name": "Local Media Auto Fit",
  "version": "1.3",
  "description": "Opens local images, GIFs, and videos (file://) and automatically fits them to the screen size.",
  "permissions": [],
  "host_permissions": ["file:///*"],
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "64": "64.png",
    "48": "48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "local-media-auto-fit@s3lm4n.com",
      "strict_min_version": "109.0"
    }
  }
}